<?xml version="1.0"?>
<launch>
  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find learnbotics)/urdf/robot_perfect.xacro'"/>

  <include file="$(find learnbotics)/launch/rviz.launch"> <arg name="show" value="false"/></include>
  
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="z" default="0.5"/>
  <node name="learnbotics_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-urdf 
              -param robot_description 
              -model / 
              -x $(arg x) 
              -y $(arg y) 
              -z $(arg z)" /> 

  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/> 
  <arg name="pause" default="true"/>   

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="debug" value="$(arg debug)"/>
      <arg name="gui" value="$(arg gui)"/>
      <arg name="paused" value="$(arg pause)"/> 
      <arg name="use_sim_time" value="true"/>       
  </include>

</launch>